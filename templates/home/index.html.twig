{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    .navbar{background: blue; border: 1px solid white;}
</style>
<nav class"nav" >
<ul class="nav justify-content-center">
  <li class="nav-item">
    <a class="nav-link active" aria-current="page" href="#">Active</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" href="/login">Login</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" href="/register">Register</a>
  </li>
  
</ul>
</nav>

<div class="container">
<div class="row">
{% for post in posts %}
<div class="col-md-4">
   <div class="card">
  <img src="{{post.photos}}" class="card-img-top" alt="...">
  <div class="card-body">
    <h5 class="card-title">{{post.title}}</h5>
    <p class="card-text">{{post.content}}</p>
    <a href="#" class="btn btn-primary">{{post.likes}}</a>
      <a href="/posts/{{post.id}}" class="btn btn-primary">{{post.dislikes}}</a>
       <p>{{post.createAt |date("{m/d/Y}")}}</p>
  </div>
</div>
</div>
 {% endfor %} 
</div>
</div>
{% endblock %}
